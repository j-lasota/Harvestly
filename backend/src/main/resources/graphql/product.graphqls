enum ProductCategory {
    FRUIT
}

type Product {
    id: ID!
    name: String!
    verified: Boolean!
    category: ProductCategory!
    ownProducts: [OwnProduct!]!
}

type Query {
    products: [Product]
    productById(id: ID!): Product
}

type Mutation {
    createProduct(name: String!, category: ProductCategory!): Product
    deleteProduct(id: ID!): Boolean
}